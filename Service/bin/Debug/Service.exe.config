<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>

	<appSettings>
		<add key="logFile" value="log.txt"/>
		<add key="measurementsSessionCsv" value="measurements_session.csv"/>
		<add key="rejectsCsv" value="rejects.csv"/>

		<add key="N02_threshold" value="85"/>
		<add key="C0_threshold" value="5000"/>
		<add key="P_threshold" value="0.07"/>
		<add key="DeviationThreshold" value="25"/>
	</appSettings>

	<system.serviceModel>
		<bindings>
			<netTcpBinding>
				<binding name="NetTcpBindingConfig"
						 transferMode="Buffered"
						 maxReceivedMessageSize="65536"
						 openTimeout="00:05:00"
						 closeTimeout="00:05:00"
						 sendTimeout="00:10:00"
						 receiveTimeout="00:10:00">
					<reliableSession enabled="true" />
					<readerQuotas maxDepth="32"
								  maxStringContentLength="8192"
								  maxArrayLength="16384"
								  maxBytesPerRead="4096"
								  maxNameTableCharCount="16384" />
				</binding>
			</netTcpBinding>
		</bindings>

		<services>
			<service name="Service.Services.SensorService">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:4002" />
					</baseAddresses>
				</host>
				<endpoint
					address="ServiceSensor"
					binding="netTcpBinding"
					bindingConfiguration="NetTcpBindingConfig"
					contract="Common.Services.ISensorService" />
			</service>

		</services>
	</system.serviceModel>
</configuration>